generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model anime {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  chaptersRead    String
  name            String
  nextReleaseDate String
  readWebsite     String
  releaseSchedule String
  startDate       String
  status          String
  totalChapters   String
  uid             String
}

model users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  username String
}
